# ==================== Database Configuration ====================
DATABASE_URL=postgresql://gmao_user:gmao_password@localhost:5432/gmao_db

# ==================== Application Configuration ====================
ENVIRONMENT=development
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000

# ==================== CORS Configuration ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== File Upload Configuration ====================
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=["pdf","docx","txt","md"]

# ==================== Import Settings ====================
DEFAULT_ENCODING=windows-1252
MAX_UPLOAD_SIZE=10485760

# ==================== RAG System Configuration ====================
# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=10

# FAISS Configuration
FAISS_INDEX_TYPE=IVF
FAISS_INDEX_PATH=./data/faiss_indexes
FAISS_DIMENSION=768
FAISS_NLIST=100
FAISS_NPROBE=10

# Document Processing
CHUNK_SIZE=256
CHUNK_OVERLAP=50
MAX_DOCUMENT_SIZE_MB=50
UPLOAD_DIR=./data/uploads

# RAG Query Configuration
DEFAULT_TOP_K=5
DEFAULT_SIMILARITY_THRESHOLD=0.3
MAX_CONTEXT_LENGTH=4096

# LLM Generation
LLM_TEMPERATURE=0.05
LLM_MAX_TOKENS=4096
LLM_SYSTEM_PROMPT="You are a helpful AI assistant for a maintenance management system. Answer questions based on the provided context. Be concise and accurate. If you don't know the answer, say so."

# Performance
BATCH_SIZE=32
MAX_WORKERS=4

# Feature Flags
ENABLE_CACHE=true
ENABLE_QUERY_LOGGING=true
ENABLE_AUTO_REINDEX=false

# =================== OCR ====================

OLLAMA_VISION_MODEL=qwen2.5vl:3b #qwen2-vl:2b or moondream ila tfrg3 l pc  